<!-- Start writing JavaScript code -->
<script>

// Store the input as a variable
var number = 3;

// Create a message for the user
var message = "Your input is: ";

// Output both of the variables using "+" between the variable names
console.log(message + number); 

// Output the number variable, a string 
// and then the result of the Boolean function
console.log(number + " is " + Boolean(number)); 


</script>

